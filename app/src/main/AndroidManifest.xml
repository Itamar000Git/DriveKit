<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/dk_icom"
        android:label="DriveKit"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drive_Kit">
        <activity
            android:name="com.example.drive_kit.View.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.drive_kit.View.SignUpActivity" />
        <activity android:name="com.example.drive_kit.View.SetUsernamePasswordActivity" />
        <activity android:name=".View.LoadingActivity" />
        <activity android:name=".View.HomeActivity" />
        <activity android:name=".View.NotificationsActivity" />
        <activity android:name=".View.ProfileActivity" />
        <activity android:name=".View.EditProfileActivity" />
        <activity android:name=".View.CarDetailsActivity" />




    </application>

</manifest>