<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/bsCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שם חברה"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#001F3F"/>

            <TextView
                android:id="@+id/bsPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="טלפון"
                android:textColor="#333333"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/bsEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מייל"
                android:textColor="#333333"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/bsWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="אתר"
                android:textColor="#333333"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bsCallBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="חייג"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#8BC34A" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bsMailBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="מייל"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#001F3F"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#EEEEEE" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bsWebBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="אתר"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#001F3F"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#EEEEEE" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
