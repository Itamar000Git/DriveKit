<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#ECEFF1"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- פס אזהרה עליון -->
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#D32F2F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- שורת אייקון + כותרת -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/ivAlertIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:tint="#D32F2F"
                    android:contentDescription="Alert icon" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="תזכורת ביטוח"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#102A43" />
            </LinearLayout>

            <!-- טקסט ההתראה -->
            <TextView
                android:id="@+id/notificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="בעוד פחות מ־14 ימים יפוג תוקף הביטוח שלך"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                android:textColor="#334E68"
                android:layout_marginBottom="14dp" />

            <!-- תגית מצב קטנה -->
            <TextView
                android:id="@+id/tvUrgencyChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דחוף"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#B71C1C"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="14dp" />

            <!-- כפתורי פעולה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDefer"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="דחה"
                    android:textAllCaps="false"
                    android:textColor="#D32F2F"
                    app:strokeColor="#D32F2F"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDone"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="בוצע"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#2E7D32"
                    app:cornerRadius="12dp"
                    app:elevation="0dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
