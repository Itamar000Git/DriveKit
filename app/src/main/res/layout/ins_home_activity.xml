<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insuranceHomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".View.Insurance_user.InsuranceHomeActivity">

    <!-- Brand / top title -->
    <TextView
        android:id="@+id/insuranceGreenTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DriveKit"
        android:textColor="#8BC34A"
        android:textSize="44sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Screen title -->
    <TextView
        android:id="@+id/insuranceHomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="מסך חברת ביטוח"
        android:textColor="#001F3F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/insuranceGreenTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/insuranceHomeScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/insuranceHomeTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/insuranceHomeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:background="@android:color/white">

                    <!-- Welcome -->
                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ברוך הבא,"
                        android:textColor="#001F3F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ✅ NEW: Company logo (loaded dynamically) -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/companyLogoImage"
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_profile_placeholder"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                        app:layout_constraintTop_toBottomOf="@id/welcomeText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Company name (dynamic from Activity) -->
                    <TextView
                        android:id="@+id/companyNameText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="שם החברה"
                        android:textColor="#8BC34A"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/companyLogoImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/subTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ניהול פניות ונתוני שותפות"
                        android:textColor="#607D8B"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/companyNameText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Card: partner status -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/partnerStatusLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="סטטוס שותפות"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F"
                        app:layout_constraintTop_toBottomOf="@id/subTitleText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/partnerStatusValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="פעיל"
                            android:textColor="#001F3F"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Card: company id -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/companyIdLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="מזהה חברה"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F"
                        app:layout_constraintTop_toBottomOf="@id/partnerStatusLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/companyIdValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="#001F3F" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Action: inquiries + red badge -->
                    <FrameLayout
                        android:id="@+id/openInquiriesContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/companyIdLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/openInquiriesButton"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="צפייה בפניות"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#8BC34A" />

                        <!-- Red badge for NEW inquiries count -->
                        <TextView
                            android:id="@+id/newInquiriesBadge"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="end|top"
                            android:layout_marginTop="-6dp"
                            android:layout_marginEnd="-6dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_badge_red_circle"
                            android:visibility="gone" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
