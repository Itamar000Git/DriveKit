<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:padding="24dp">

    <!-- Logo -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=" "
        android:textColor="#001F3F"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"/>

    <!-- Circles grid -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/circlesGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:rowCount="2"
        app:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circle 1 – My Car -->
        <LinearLayout
            android:id="@+id/circleMyCar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_button"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/myCarIcon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/car4" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:text="הרכב שלי"
                android:textColor="#001F3F"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Circle 2 – DIY (FIXED CLICK AREA) -->
        <LinearLayout
            android:id="@+id/circleDIY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_button"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/diyIcon"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/diy1" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:text="DIY"
                android:textColor="#001F3F"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Circle 3 – Garage -->
        <LinearLayout
            android:id="@+id/circleGarage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_button"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/garageIcon"
                        android:layout_width="121dp"
                        android:layout_height="105dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/garage" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:text="מוסך קרוב"
                android:textColor="#001F3F"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Circle 4 – Insurance -->
        <LinearLayout
            android:id="@+id/circleInsurance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_button"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/insuranceIcon"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/insurencepic" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:text="ביטוח רכב"
                android:textColor="#001F3F"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

    <!-- Notification circle placeholder -->
    <LinearLayout
        android:id="@+id/circleNoty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/circlesGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile icon -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="פרופיל"
        android:src="@drawable/ic_profile"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Notifications -->
    <FrameLayout
        android:id="@+id/notyContainer"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/noty_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="התראות"
            android:src="@drawable/notification_bell"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/noty_badge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_circle"
            android:visibility="gone" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
