<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ============ MAIN CONTENT ============ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeContentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        android:padding="24dp">

        <!-- Logo -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Welcome text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=" "
            android:textColor="#001F3F"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/logoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921" />

        <!-- Circles grid -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/circlesGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:rowCount="2"
            app:useDefaultMargins="true"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/includeBottomBar">

            <!-- Circle 1 – My Car -->
            <LinearLayout
                android:id="@+id/circleMyCar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                app:layout_columnWeight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_button"
                    android:clickable="false"
                    android:focusable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/myCarIcon"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/car4" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:text="הרכב שלי"
                    android:textColor="#001F3F"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Circle 2 – DIY -->
            <LinearLayout
                android:id="@+id/circleDIY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                app:layout_columnWeight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_button"
                    android:clickable="false"
                    android:focusable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/diyIcon"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/diy1" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:text="DIY"
                    android:textColor="#001F3F"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Circle 3 – Garage -->
            <LinearLayout
                android:id="@+id/circleGarage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                app:layout_columnWeight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_button"
                    android:clickable="false"
                    android:focusable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/garageIcon"
                            android:layout_width="121dp"
                            android:layout_height="105dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/garage" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:text="מוסך קרוב"
                    android:textColor="#001F3F"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Circle 4 – Insurance -->
            <LinearLayout
                android:id="@+id/circleInsurance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                app:layout_columnWeight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_button"
                    android:clickable="false"
                    android:focusable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/insuranceIcon"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/insurencepic" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:text="ביטוח רכב"
                    android:textColor="#001F3F"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>

        <!-- Notification circle placeholder -->
        <LinearLayout
            android:id="@+id/circleNoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/circlesGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/includeBottomBar" />

        <!-- Bottom bar (shared layout) -->
        <include
            android:id="@+id/includeBottomBar"
            layout="@layout/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============ DRAWER MENU ============ -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        app:menu="@menu/drawer_menu"
        app:itemBackground="@drawable/drawer_item_bg"
        app:itemTextColor="@color/drawer_item_text"
        app:itemIconTint="@color/drawer_item_icon"
        app:itemHorizontalPadding="16dp"
        app:itemVerticalPadding="10dp"
        app:itemIconSize="32dp" />

</androidx.drawerlayout.widget.DrawerLayout>
