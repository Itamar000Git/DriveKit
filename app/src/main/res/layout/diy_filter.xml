<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diyFilterRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".View.DIYFilterActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/diyGreenTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DIY"
        android:textColor="#8BC34A"
        android:textSize="44sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/diyFilterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="סינון מדריכים"
        android:textColor="#001F3F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/diyGreenTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/diyFilterScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/diyFilterTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/diyFilterContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:background="@android:color/white">

                    <!-- My Car button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/myCarButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="הרכב שלי"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#8BC34A"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Manufacturer -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/manufacturerLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:hint="יצרן"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="#001F3F"
                        app:layout_constraintTop_toBottomOf="@id/myCarButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/manufacturerDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:cursorVisible="false"
                            android:importantForAutofill="no"
                            android:textColor="#001F3F"
                            android:textColorHint="#607D8B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Model -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/modelLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="דגם"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="#001F3F"
                        app:layout_constraintTop_toBottomOf="@id/manufacturerLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/modelDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:cursorVisible="false"
                            android:importantForAutofill="no"
                            android:textColor="#001F3F"
                            android:textColorHint="#607D8B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Year -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/yearLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="שנה"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="#001F3F"
                        app:layout_constraintTop_toBottomOf="@id/modelLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/yearDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:cursorVisible="false"
                            android:importantForAutofill="no"
                            android:textColor="#001F3F"
                            android:textColorHint="#607D8B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Search button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="16dp"
                        android:text="חפש"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="#001F3F"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#EEEEEE"
                        app:layout_constraintTop_toBottomOf="@id/yearLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/creditCarCareKiosk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/credit_carcarekiosk_link"
                        android:textColor="#607D8B"
                        android:textColorLink="#8BC34A"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:linksClickable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintTop_toBottomOf="@id/searchButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/disclaimerText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:gravity="center"
                        android:text="המידע והסרטונים ניתנים לצורכי מידע בלבד. השימוש בהם והביצוע בפועל הם באחריות הצופה בלבד. אין באמור ייעוץ מקצועי, ואיננו אחראים לכל נזק, תקלה או פגיעה. במקרה של ספק יש לפנות לבעל מקצוע מוסמך."
                        android:textColor="#607D8B"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/creditCarCareKiosk"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
