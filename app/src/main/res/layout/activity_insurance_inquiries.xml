<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="פניות חדשות"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#001F3F"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOldInquiries"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="6dp"
        android:text="פניות ישנות"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#001F3F"
        app:cornerRadius="12dp"
        app:backgroundTint="#EEEEEE"
        app:strokeColor="#CFD8DC"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@id/oldInquiriesHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/oldInquiriesHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="לחץ לחיצה ארוכה על מנת לחזור לפניות חדשות"
        android:textSize="12sp"
        android:textColor="#607D8B"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inquiriesRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toTopOf="@id/btnOldInquiries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
