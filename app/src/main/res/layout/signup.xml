<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".View.SignUpActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/signupScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/logoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/logoKit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Kit"
                    android:textColor="#8BC34A"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/logoDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drive"
                    android:textColor="#E0E0E0"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/signupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="משתמש חדש"
                android:textColor="#E0E0E0"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logoContainer" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signupTitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שם פרטי"
                    android:inputType="textPersonName"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstNameLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שם משפחה"
                    android:inputType="textPersonName"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastNameLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="אימייל"
                    android:inputType="textEmailAddress"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/carNumberLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/carNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="מספר רכב"
                    android:inputType="number"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/carNumberLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="מספר טלפון"
                    android:inputType="phone"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Manufacturer dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/manufacturerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:endIconMode="dropdown_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneLayout">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/manufacturerDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="יצרן"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ADDED: Model dropdown (same style as manufacturer) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/modelLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:endIconMode="dropdown_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/manufacturerLayout">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/modelDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="דגם"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Year dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/yearLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:endIconMode="dropdown_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/modelLayout">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/yearDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שנת ייצור"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/insuranceDateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yearLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/insuranceDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="תאריך ביטוח"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testDateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/insuranceDateLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/testDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="תאריך טסט"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service10kDateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#99FFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#B0BEC5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/testDateLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service10kDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint=" תאריך טיפול 10,000 אחרון"
                    android:textColor="#E0E0E0"
                    android:textColorHint="#B0BEC5" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/notremember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:text="לא זוכר? בחר מהאפשרויות הבאות"
                android:textColor="#E0E0E0"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service10kDateLayout" />

            <!-- Range buttons -->
            <HorizontalScrollView
                android:id="@+id/service10kRangeButtonsScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fillViewport="true"
                android:layoutDirection="rtl"
                android:scrollbars="none"
                android:textDirection="rtl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notremember">

                <LinearLayout
                    android:id="@+id/service10kRangeButtonsRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <Button
                        android:id="@+id/btnService10kUpTo2Months"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#D6D6D6"
                        android:ellipsize="end"
                        android:minWidth="120dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:singleLine="true"
                        android:text="עד חודשיים"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnService10kUpTo4Months"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#D6D6D6"
                        android:ellipsize="end"
                        android:minWidth="120dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:singleLine="true"
                        android:text="עד 4 חודשים"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnService10kUpTo6MonthsPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:backgroundTint="#D6D6D6"
                        android:gravity="center"
                        android:minWidth="170dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:singleLine="false"
                        android:text="עד חצי שנה \n והלאה"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#D6D6D6"
                android:text="הבא"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service10kRangeButtonsScroll" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
