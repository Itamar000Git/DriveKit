<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".View.SignUpActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/signupScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo -->
            <LinearLayout
                android:id="@+id/logoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/logoKit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Kit"
                    android:textColor="#8BC34A"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/logoDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drive"
                    android:textColor="#001F3F"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/signupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="משתמש חדש"
                android:textColor="#001F3F"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/logoContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Role -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/roleLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/signupTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioGroup
                    android:id="@+id/roleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <RadioButton
                        android:id="@+id/radioDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="נהג"
                        android:textColor="#001F3F"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioInsurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:text="חברת ביטוח"
                        android:textColor="#001F3F"
                        android:textStyle="bold" />
                </RadioGroup>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/roleLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שם מלא"
                    android:inputType="textPersonName"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name (hidden by default) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/firstNameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שם משפחה"
                    android:inputType="textPersonName"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#607D8B"
                app:layout_constraintTop_toBottomOf="@id/lastNameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="אימייל"
                    android:inputType="textEmailAddress"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Car Number (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/carNumberLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/emailLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/carNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="מספר רכב"
                    android:inputType="number"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/carNumberLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="מספר טלפון"
                    android:inputType="phone"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Insurance company (insurance only) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/insuranceCompanyLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:endIconMode="dropdown_menu"
                app:layout_constraintTop_toBottomOf="@id/phoneLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/insuranceCompanyDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="בחר חברת ביטוח"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Insurance Company ID (auto) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/insuranceCompanyIdLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/insuranceCompanyLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/insuranceCompanyIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="מזהה חברה (אוטומטי)"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Manufacturer (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/manufacturerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:endIconMode="dropdown_menu"
                app:layout_constraintTop_toBottomOf="@id/insuranceCompanyIdLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/manufacturerDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="יצרן"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Model (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/modelLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:endIconMode="dropdown_menu"
                app:layout_constraintTop_toBottomOf="@id/manufacturerLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/modelDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="דגם"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Year (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/yearLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:endIconMode="dropdown_menu"
                app:layout_constraintTop_toBottomOf="@id/modelLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/yearDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שנת ייצור"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Car photo (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/carPhotoLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_camera_small"
                app:endIconTint="#607D8B"
                app:layout_constraintTop_toBottomOf="@id/yearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/carPhotoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="תמונת רכב"
                    android:focusable="false"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Insurance Date (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/insuranceDateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/carPhotoLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/insuranceDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="תאריך ביטוח"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Test Date (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testDateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/insuranceDateLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/testDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="תאריך טסט"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Service 10k Date (driver) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service10kDateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#8BC34A"
                app:hintTextColor="#8E9AA6"
                app:layout_constraintTop_toBottomOf="@id/testDateLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service10kDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint=" תאריך טיפול 10,000 אחרון"
                    android:textColor="#001F3F"
                    android:textColorHint="#8E9AA6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Clickable "don't remember" text (blue) -->
            <TextView
                android:id="@+id/tvService10kDontRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:text="לא זוכר תאריך טיפול? לחץ כאן."
                android:textColor="#1976D2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/service10kDateLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#8BC34A"
                android:text="הבא"
                android:textColor="#001F3F"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvService10kDontRemember"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
