<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editCompanyRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/editCompanyScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editCompanyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="עריכת פרטי חברה"
                android:textColor="#001F3F"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/editCompanyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl">

                    <!-- Company ID (read-only) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="מזהה חברה"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCompanyId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="#212121"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="שם חברה"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="טלפון"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCompanyPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="#212121"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="אימייל"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCompanyEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="#212121"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Website -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="אתר"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="#8BC34A"
                        app:hintTextColor="#001F3F">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCompanyWebsite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:textColor="#212121"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveCompany"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="16dp"
                        android:text="שמירה"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:cornerRadius="14dp"
                        app:backgroundTint="#8BC34A"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading overlay (center) -->
    <ProgressBar
        android:id="@+id/editCompanyLoading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
