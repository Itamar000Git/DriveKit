<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".View.DIYIssuesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/titleDIY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DIY"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#8BC34A"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=" "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001F3F"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/titleDIY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Download manual PDF button - more presence -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadManual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="ספר רכב (PDF)"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:enabled="false"
            android:alpha="0.5"
            app:icon="@android:drawable/stat_sys_download_done"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:cornerRadius="14dp"
            app:backgroundTint="#001F3F"
            app:strokeColor="#0D47A1"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/subtitleFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Recycler (NOT scrolling by itself) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/issuesRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:clipToPadding="false"
            android:background="@android:color/white"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/btnDownloadManual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_issue_button"/>

        <!-- Legal notice -->
        <TextView
            android:id="@+id/legalNotice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="הנחייה: השימוש בסרטונים הוא באחריות הצופה בלבד."
            android:textSize="12sp"
            android:textColor="#607D8B"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/issuesRecycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Credit -->
        <TextView
            android:id="@+id/creditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Video credit: carcarekiosk.com"
            android:textSize="12sp"
            android:textColor="#607D8B"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/legalNotice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
