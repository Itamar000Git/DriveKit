<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:padding="24dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".View.DIYIssuesActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleDIY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIY"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#2E7D32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle (shows selected filter) -->
    <TextView
        android:id="@+id/subtitleFilter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" "
        android:textSize="16sp"
        android:textColor="#001F3F"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleDIY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Issues list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/issuesRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleFilter"
        app:layout_constraintBottom_toTopOf="@id/legalNotice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_issue_button"/>

    <!-- Legal notice -->
    <TextView
        android:id="@+id/legalNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="הנחייה: השימוש בסרטונים הוא באחריות הצופה בלבד."
        android:textSize="12sp"
        android:textColor="#001F3F"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/issuesRecycler"
        app:layout_constraintBottom_toTopOf="@id/creditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Credit -->
    <TextView
        android:id="@+id/creditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Video credit: carcarekiosk.com"
        android:textSize="12sp"
        android:textColor="#001F3F"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/legalNotice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
