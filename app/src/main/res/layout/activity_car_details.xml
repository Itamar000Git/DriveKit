<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- ===== Car details (KEEP IDs) ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCarDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/carTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/carInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:alpha="0.85" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== Actions ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCarActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvActionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="פעולות"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Download Car Book -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownloadCarBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="הורדת ספר רכב"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/green" />

            <!-- Open Yad2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenYad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="פתח ביד2 (מחירי שוק)"
                android:textAllCaps="false"
                android:textColor="@color/green"
                app:cornerRadius="14dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/green"
                app:backgroundTint="@color/white" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
